    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "hostname": "0.0.0.0",
            "port": 9003,
            "pathMappings": {
                "/var/www/html/dev-tools": "${workspaceFolder}/dev-tools",
                "/var/www/html/cdn": "${workspaceFolder}/src/cdn",
                "/var/www/html/server-emulator": "${workspaceFolder}/src/server-emulator"
            },
            "xdebugSettings": {
                "max_children": 999,
                "max_depth": 10,
                "max_data": 10240000
            }
        }
    ]
}